extends mainlayout.pug

block extra-css
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker3.css', type='text/css')
block extra-js
    script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.min.js')
    script(src='js/datepicker.js')
    script(src='js/carbrowser.js')

block header
    if !carData
      header(class='masthead')
          div(class='container')
              include includes/datepicker

block main-content
  section(class='success' id='ourcars')
   if carData
     form(action="/cars/carbooking" method="POST" name="saveCarBooking" id="saveCarBooking")
       h4  Available cars :
       div(class='input-group input-daterange justify-content-center')
         input(name="startdate" id='datepicker-from' placeholder=fromDate value=fromDate readonly)
         div(class='input-group-addon') &nbsp;to&nbsp;
         input(name="enddate" id='datepicker-to' placeholder=toDate value=toDate areadonly)
       div(class='container')
          table(class='table table-hover mx-auto car-table-container')
            thead(class='thead-inverse')
              tr
                th(scope='col')
                th(scope='col') brand
                th(scope='col') Seats
                th(scope='col') Towbar
                th(scope='col') Price/Day
            tbody
              - for (var x = 0; x < carData.length; x++)
                tr
                  td
                    input(type='checkbox' id=carData[x]._id name='bookingcarId' value=carData[x]._id)
                  td
                    .div= carData[x].brand
                  td
                    .div= carData[x].seats
                  td
                    .div= carData[x].towbar
                  td
                    .div= carData[x].priceperday
       button(type='submit' class="btn btn-primary btn-lg") Book

   else
      h2(class='text-center') Our cars
        div(class='d-flex flex-row justify-content-center align-items-stretch')
          button(class='filtercars' id='automatic') Automatic
          button(class='filtercars' id='towbar') Towbar
          button(class='filtercars' id='seats2') 2 seats
          button(class='filtercars' id='seats5') 5 seats
          button(class='filtercars' id='seats7') 7 seats

        table(class='table table-hover mx-auto car-table-container')
          thead(class='thead-inverse')
            tr
              th(scope='col') Brand
              th(scope='col') Seats
              th(scope='col') Automatic
              th(scope='col') Towbar
              th(scope='col') Price/day
          tbody(id='car-table')



      //Scroll to Top Button (Only visible on small and extra-small screen sizes)
      div(class='scroll-top hidden-lg-up')
          a(class='btn btn-primary page-scroll' href='#page-top')
              i(class='fa fa-chevron-up')
              i(class='') Car rental at discounted price
