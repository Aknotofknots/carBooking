div(class='intro-text text-center datepicker-container')
  h1 Rent your car now!!
  form(action="../cars/available" method="POST" name="checkAvailibilty" id="checkAvailibilty")
    if wrongDate
      div(class="alert alert-danger")
        a(class="close" data-dismiss="alert" href="#") x
        p= wrongDate
    div(class='input-group input-daterange justify-content-center')
      input(class="form-input" data-provide='datepicker' name="startdate" id='datepicker-from' placeholder='Start Date' required)
      input(data-provide='datepicker' name="date[from]" id='datepicker-from-hidden' type='hidden' required)
      span(class='input-group-addon') &nbsp;to&nbsp;
      input(class="form-input" data-provide='datepicker' name="enddate" id='datepicker-to' placeholder='End Date')
      input(data-provide='datepicker' name="date[to]" id='datepicker-to-hidden'  type='hidden')
    button(type='submit' class="btn btn-lg btn-danger" id="check-available") Check availability
